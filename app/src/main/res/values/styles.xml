<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGeneralText</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="background">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorGeneralText</item>
        <item name="colorButtonNormal">@color/colorGeneralText</item>
        <item name="homeAsUpIndicator">@color/colorGeneralText</item>
        <item name="titleTextColor">@color/colorGeneralText</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/main_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/colorGeneralLine</item>
        <item name="android:textColorHint">@color/colorGeneralText</item>
    </style>
</resources>

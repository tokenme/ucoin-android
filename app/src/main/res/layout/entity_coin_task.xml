<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/entity_coin_task_border_radius"
    android:layout_margin="10dp"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题:"
            android:layout_marginRight="6dp"
            android:textSize="16sp"
            android:textColor="@color/colorGeneralText"/>
        <TextView
            android:id="@+id/entity_coin_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGeneralText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述:"
            android:textSize="16sp"
            android:layout_marginRight="6dp"
            android:textColor="@color/colorGeneralText"/>
        <TextView
            android:id="@+id/entity_coin_task_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGeneralText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奖励:"
            android:textSize="16sp"
            android:layout_marginRight="6dp"
            android:textColor="@color/colorGeneralText"/>
        <TextView
            android:id="@+id/entity_coin_task_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGeneralText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总量:"
            android:textSize="16sp"
            android:layout_marginRight="6dp"
            android:textColor="@color/colorGeneralText"/>
        <TextView
            android:id="@+id/entity_coin_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGeneralText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时效:"
            android:textSize="16sp"
            android:layout_marginRight="6dp"
            android:textColor="@color/colorGeneralText"/>
        <TextView
            android:id="@+id/entity_coin_task_start_date"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGeneralText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginHorizontal="2dp"
            android:text="@string/midline"/>
        <TextView
            android:id="@+id/entity_coin_task_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGeneralText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGeneralLine"
        android:layout_marginTop="10dp">
    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:id="@+id/entity_coin_task_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:rowCount="2"
        app:columnCount="3">
    </android.support.v7.widget.GridLayout>
</LinearLayout>
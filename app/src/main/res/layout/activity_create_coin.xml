<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarHeight="50dp"
        app:showBottomLine="true"
        app:centerType="textView"
        app:centerText="@string/activity_create_coin_title"
        app:leftCustomView="@layout/view_title_bar_left_back"
        app:leftType="customView" />

    <android.support.v4.widget.NestedScrollView
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_create_coin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/activity_create_coin_name_content"
                    android:lines="1"
                    android:hint="@string/activity_create_coin_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextTheme"
                    android:textSize="16sp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorGeneralText"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_create_coin_symbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:lines="1"
                    android:id="@+id/activity_create_coin_symbol_content"
                    android:hint="@string/activity_create_coin_symbol_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextTheme"
                    android:textSize="16sp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorGeneralText"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_create_coin_total_supply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/activity_create_coin_total_supply_content"
                    android:lines="1"
                    android:hint="@string/activity_create_coin_total_supply_title"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextTheme"
                    android:textSize="16sp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorGeneralText"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_create_coin_decimals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/activity_create_coin_decimals_content"
                    android:lines="1"
                    android:hint="@string/activity_create_coin_decimals_title"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextTheme"
                    android:textSize="16sp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorGeneralText"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/activity_create_coin_take_photo"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/activity_create_coin_upload_border">
                    <com.mikepenz.iconics.view.IconicsTextView
                        android:text="{faw-plus-circle}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icon"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_create_coin_upload_logo"/>
                </LinearLayout>
                <android.support.v7.widget.GridLayout
                    android:id="@+id/activity_create_coin_upload_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rowCount="2"
                    app:columnCount="4">
                </android.support.v7.widget.GridLayout>
            </LinearLayout>
            <Button
                android:id="@+id/activity_create_coin_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/activity_create_coin_submit"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/activity_create_coin_submit_button_border_radius"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>